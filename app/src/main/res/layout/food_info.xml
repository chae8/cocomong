<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#dac9ff">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:src="?attr/actionModeCloseDrawable"
                android:contentDescription="@string/btn_back"/>

            <TextView
                android:id="@+id/tv_infoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="재료 이름"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="@string/btn_edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/food_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:onClick="onClick" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    android:text="바코드 코드 번호"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/et_infoFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:hint="음식이름 입력"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColorHint="#8A8A8A"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리 :"
                android:layout_margin="5dp"
                android:textColor="@color/purple_200"
                />

            <EditText
                android:id="@+id/et_infoCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="카테고리 입력"
                android:enabled="false"
                android:inputType="text"
                android:textSize="20dp"
                android:textColorHint="#8A8A8A"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유통기한 :"
                android:layout_margin="5dp"
                android:textColor="@color/purple_200"
                />

            <EditText
                android:id="@+id/et_infoExpire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="유통기한 입력"
                android:enabled="false"
                android:inputType="date"
                android:textSize="20dp"
                android:textColorHint="#8A8A8A"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="memo"
                android:textColor="@color/purple_200"/>

            <EditText
                android:id="@+id/et_memo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:enabled="false"
                android:hint="메모 입력"
                android:layout_margin="5dp"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:maxLength="50"
                android:textColor="@color/black"
                android:textColorHint="#8A8A8A"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout"

        android:gravity="center"

        android:backgroundTint="#b796ff "
        android:text="저장"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="삭제"
        android:textColor="#FF0000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:backgroundTint="#63624387" />

</RelativeLayout>